@model DroneDelivery.Models.Product

@{
    ViewBag.Title = "Inventory Update";
}
@using (Html.BeginForm())
{
<div>
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.Id);

    <h4>Product @Model.Id - Change / View Stock</h4>
    <hr />
    <div class="form-horizontal">

        @if (ViewData["success"] != null)
        {
            <p class="text-center text-success">@ViewData["success"]</p>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Product:</label>
            <div class="col-md-10">
                <!-- @@Html.EditorFor(model => model.ProductName, new { htmlAttributes = new {class = "form-control", readonly = "readonly", disabled = "disabled" } } ) @@ -->
                <p class="form-control-static">@Model.ProductName</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Current Stock:</label>
            <div class="col-md-10">
                <span>@ViewData["current_stock"] currently in the inventory.</span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Enter a positive or negative integer to update the inventory. So enter 5 to add five, -5 to remove five.</label>
            <div class="col-md-10">
                <input type="number" name="stock_count" class="form-control" value="1" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
</div>
}
<p>
    @Html.ActionLink("Edit Product", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
